<?xml version="1.0" encoding="UTF-8"?>
<xsl:stylesheet version="1.0" xmlns:xsl="http://www.w3.org/1999/XSL/Transform">
  <xsl:output method="html" encoding="UTF-8" indent="yes"/>
  
  <xsl:template match="/">
    <html>
      <head>
        <meta charset="UTF-8"/>
        <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
        <title><xsl:value-of select="rss/channel/title"/> - RSS Feed</title>
        <style>
          body { font-family: -apple-system, sans-serif; max-width: 800px; margin: 2rem auto; padding: 0 1rem; background: #fafafa; color: #333; }
          h1 { color: #1a1a1a; text-align: center; margin-bottom: 2rem; }
          .meta { text-align: center; color: #666; margin-bottom: 3rem; font-size: 0.9rem; }
          .item { background: white; margin-bottom: 1rem; padding: 1rem 1.5rem; border-radius: 8px; border: 1px solid #e5e5e5; border-left: 4px solid #0066cc; }
          .item h3 { margin: 0 0 0.5rem 0; font-size: 1.1rem; }
          .item h3 a { color: #1a1a1a; text-decoration: none; }
          .item h3 a:hover { color: #0066cc; }
          .date { color: #999; font-size: 0.8rem; margin-bottom: 0.5rem; }
          .content { line-height: 1.5; color: #555; font-size: 0.9rem; }
        </style>
      </head>
      <body>
        <h1><xsl:value-of select="rss/channel/title"/></h1>
        <div class="meta">
          <xsl:value-of select="rss/channel/description"/>
        </div>
        
        <xsl:for-each select="rss/channel/item">
          <div class="item">
            <h3><a href="{link}"><xsl:value-of select="title"/></a></h3>
            <div class="date"><xsl:value-of select="pubDate"/></div>
            <div class="content"><xsl:value-of select="description"/></div>
          </div>
        </xsl:for-each>
      </body>
    </html>
  </xsl:template>
</xsl:stylesheet>