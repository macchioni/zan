---
layout: layouts/base.njk
---
<article class="journal_post">
<section class="title-desc">
    <h1>{{ title }}</h1>
    {% if description %}
    <h2>{{ description }}</h2>
    {% endif %}
</section>

<div class="show-link-underlines">
  <div class="post-content">
    {{ content | safe }}
  </div>
</article>

<section class="metadata">
  <p>
    <time datetime="{{ page.date | formatDate }}">{{ page.date | readableDate }}</time>
    &sdot; 
    {% if tags %}
      <span class="post-tags">
        {% for tag in tags %}
          {% if tag != "posts" %}
            <a href="/tags/{{ tag }}/" class="tag">{{ tag }}</a>{% if not loop.last %}, {% endif %}
          {% endif %}
        {% endfor %}
      </span>
    {% endif %}
  </p>
  </div>
</section>
           

<nav class="post-navigation">
  {%- set previousPost = collections.posts | getPreviousCollectionItem %}
  {%- set nextPost = collections.posts | getNextCollectionItem %}

  <div class="post-nav-links">
    {% if previousPost %}
      <div class="post-nav-prev">
        <a href="{{ previousPost.url }}" rel="prev">← {{ previousPost.data.title }}</a>
      </div>
    {% endif %}

    {% if nextPost %}
      <div class="post-nav-next">
        <a href="{{ nextPost.url }}" rel="next">{{ nextPost.data.title }} →</a>
      </div>
    {% endif %}
  </div>
</nav>

<section><nav class="pagination" aria-labelledby="my-pagination">
  
    <a class="pagination-item prev">{% if previousPost %}
      <div class="post-nav-prev">
        <a href="{{ previousPost.url }}" rel="prev">← {{ previousPost.data.title }}</a>
      </div>
    {% endif %}</span></a>
  
    <a class="pagination-item next">{% if nextPost %}
      <div class="post-nav-next">
        <a href="{{ nextPost.url }}" rel="next">{{ nextPost.data.title }} →</a>
      </div>
    {% endif %}</span></a>
  
</nav>
</section>